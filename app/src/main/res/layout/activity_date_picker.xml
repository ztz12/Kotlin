<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DatePickerActivity">

    <Button
        android:id="@+id/show_datePicker_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="打开日期One"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_date_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/show_datePicker_one"
        android:text="日期One"
        android:textSize="18sp" />

    <Button
        android:id="@+id/show_datePicker_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="打开日期Two"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_date_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/show_datePicker_two"
        android:text="日期Two"
        android:textSize="18sp" />

</RelativeLayout>