<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_130"
        android:textSize="@dimen/sp_28"
        android:text="@string/reading_title"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_reading"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:id="@+id/tv_question"
        android:text="@string/reading_tip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_question"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:id="@+id/tv_knowledge"
        android:text="@string/reading_knowledge"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_knowledge"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:id="@+id/tv_tip"
        android:layout_margin="@dimen/dp_15"
        android:text="@string/reading_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tv_tip">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="智能练习"
        android:padding="@dimen/dp_10"
        android:id="@+id/practice"
        android:background="@drawable/bg_conner_bottom_red"
        android:textSize="@dimen/sp_16"/>
    <Button
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_tip"
        android:text="自主练习"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_conner_bottom_red"
        android:textSize="@dimen/sp_16"/>
    </LinearLayout>
</RelativeLayout>
