<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".students.activity.IntensiveReadActivity">
    <LinearLayout
        android:id="@+id/test_ll_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:id="@+id/rl_bar"
        android:background="#0fa2ff" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/selector_exit" />
    </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="#0fa2ff" >

                <ImageView
                    android:id="@+id/test_back"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/selector_exit" />
                <TextView
                    android:id="@+id/test_time"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="12:00"
                    android:background="@drawable/test_time_normal"
                    android:gravity="center"
                    android:textColor="#f9fe7b"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/test_card_another"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_height="48dp"
                    android:src="@drawable/selector_test_card_another" />
                <ImageView
                    android:id="@+id/test_card"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_height="48dp"
                    android:src="@drawable/selector_test_card" />

                <ImageView
                    android:id="@+id/test_store"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:src="@drawable/test_store_un" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/bg_conner_bottom_red"
                    android:id="@+id/btn_import_word"
                    android:textColor="@color/White"
                    android:text="重点词汇"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/bg_conner_bottom_red"
                    android:id="@+id/btn_import_sentence"
                    android:textColor="@color/White"
                    android:text="重点句型及语法"/>
            </LinearLayout>
        </HorizontalScrollView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/rl_title"
            android:background="#f2f2f2" >

            <TextView
                android:id="@+id/test_html_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="朗读短文"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_questionL"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="题目"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_questionR"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="题目"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@color/colorAccent"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="@string/title"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_title"
        android:layout_below="@id/test_ll_test"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content"
        android:layout_below="@id/tv_title"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10"
        android:id="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="重点词汇"
        android:textColor="@color/White"
        android:background="@drawable/bg_conner_bottom_red"
        android:id="@+id/btn_bottom_word"
        android:layout_marginStart="@dimen/dp_10" />
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="口语"
        android:layout_marginStart="@dimen/dp_50"
        android:textColor="@color/White"
        android:background="@drawable/bg_conner_bottom_red" />
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_bottom_sentence"
        android:layout_below="@id/tv_content"
        android:background="@drawable/bg_conner_bottom_red"
        android:text="重点句型语法"
        android:textColor="@color/White" />
    </LinearLayout>
</RelativeLayout>