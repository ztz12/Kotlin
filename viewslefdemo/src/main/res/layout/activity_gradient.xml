<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GradientActivity">
    <Button
        android:id="@+id/btn_linear"
        style="@style/textview_button"
        android:text="linear渐变" />

    <Button
        android:id="@+id/btn_radial"
        style="@style/textview_button"
        android:text="radial渐变" />

    <Button
        android:id="@+id/btn_sweep"
        style="@style/textview_button"
        android:text="sweep渐变" />
    <com.wanandroid.zhangtianzhu.viewslefdemo.widget.GradientView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_200"
        android:id="@+id/gradient"/>
</LinearLayout>